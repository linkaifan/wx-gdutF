.bind{
  padding: 0px 100rpx 0rpx 80rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.bind:before {
  content: " ";
  position: absolute;
  top: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #3fab8b;
  left: 55px;
  right: 100px;
  width: 570rpx;
  opacity: 0.5;
}
.weui-cell_access::before{
    content: " ";
  position: absolute;
  top: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #3fab8b;
  left: 15px;
  right: 100px;
  width: 750rpx;
}
.bind:first-child:before {
  display: none;
}
